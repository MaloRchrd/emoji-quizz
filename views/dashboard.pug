extends layout.pug


block nav


block main
  .container(id='score')
    .row-fluid(align='center')
      h1 Les scores
      .col-md-6.col-md-offset-3.form-inline
        p Chercher un utilisateur
          br
          input.search.form-control(placeholder='username')
          br
          button.sort.btn.btn-info(data-sort='score') Sort by score
          button.sort.btn.btn-danger(data-sort='username') Sort by username
      table.table.table-striped.table-bordered
        thead
          tr
            th 😎 Username
            th 🙏 Score
        tbody.list
          each user in data
            tr
              th.username #{user.user.user.username}
              th.score #{user.user.user.score}


block footer
  script(src='//listjs.com/assets/javascripts/list.min.js')
  script(src='/js/dash.js')
